        <observer name="afterpay_update_configs_before_config_save_payment"
                  instance="Afterpay\Afterpay\Observer\Adminhtml\ConfigSaveAfter"/>
    </event>
    <event name="admin_system_config_changed_section_general">
        <observer name="afterpay_update_configs_before_config_save_default"
