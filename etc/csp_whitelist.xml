<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="afterpay" type="host">*.afterpay.com</value>
                <value id="afterpay-cdn" type="host">*.afterpaycdn.com</value>
                <value id="square-jslib" type="host">*.squarecdn.com</value>
                   <value id="cash-cdn" type="host">*.cash.app</value>
            </values>
        </policy>
		<policy id="connect-src">
            <values>
                <value id="afterpay-connect" type="host">*.afterpay.com</value>
                <value id="afterpay-beta-connect" type="host">*.afterpay-beta.com</value>
                <value id="afterpay-cdn-connect" type="host">*.afterpaycdn.com</value>
                <value id="square-jslib-connect" type="host">*.squarecdn.com</value>
                <value id="cash-cdn-connect" type="host">*.cash.app</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="afterpay-frame" type="host">*.afterpay.com</value>
                <value id="afterpay-cdn-frame" type="host">*.afterpaycdn.com</value>
                <value id="square-frame" type="host">*.squarecdn.com</value>
                <value id="cash-cdn-frame" type="host">*.cash.app</value>
            </values>
        </policy>
		<policy id="style-src">
        		<values>
            		<value id="afterpay-style" type="host">*.afterpay.com/</value>
                    <value id="afterpay-cdn-style" type="host">*.afterpaycdn.com</value>
                    <value id="square-jslib-style" type="host">*.squarecdn.com</value>
        		</values>
    	</policy>
		<policy id="img-src">
            <values>
                <value id="afterpay-img" type="host">*.afterpay.com/</value>
                <value id="afterpay-cdn-img" type="host">*.afterpaycdn.com</value>
                <value id="square-img" type="host">*.squarecdn.com</value>
                <value id="cash-cdn-img" type="host">*.cash.app</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="afterpay-font" type="host">*.afterpay.com/</value>
                <value id="afterpay-cdn-font" type="host">*.afterpaycdn.com</value>
                <value id="square-cdn-font" type="host">*.squarecdn.com</value>
                <value id="cash-cdn-font" type="host">*.cash.app</value>            </values>
        </policy>
    </policies>
</csp_whitelist>
